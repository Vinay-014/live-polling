generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Poll {
  id        String   @id @default(uuid())
  question  String
  createdAt DateTime @default(now())
  duration  Int
  status    String   @default("OPEN") // SQLite doesn't support enums
  options   Option[]
  votes     Vote[]
}

model Option {
  id        String   @id @default(uuid())
  text      String
  isCorrect Boolean  @default(false)
  pollId    String
  poll      Poll     @relation(fields: [pollId], references: [id])
  votes     Vote[]
}

model Vote {
  id        String   @id @default(uuid())
  student   String
  pollId    String
  optionId  String
  createdAt DateTime @default(now())
  poll      Poll     @relation(fields: [pollId], references: [id])
  option    Option   @relation(fields: [optionId], references: [id])

  @@unique([student, pollId]) // Ensure one vote per student per poll
}


